<div id="component">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home",root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Users", users_path %></li>
    <li class="breadcrumb-item active"><%=  @user.email %></li>
  </ol>
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-xs-5">
          <h2 class="card-title"><%= @user.email %></h2>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group" aria-label="First group">
              <% if policy(@user).edit? %>
                <%= link_to "Edit", [:edit, @user],
                class: "edit" %>
              <% end %>
              <% if policy(@user).destroy? %>
                <%= link_to "Delete", @user, method: :delete,
        data: { confirm: "Are you sure you want to delete this user?"},
        class: "delete" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <ul class="list-group">
          <li class="list-group-item"><strong>Sign in count</strong> <%= @user.sign_in_count %></li>
          <li class="list-group-item"><strong>Current signed in</strong> <%= @user.current_sign_in_at %> (<%= @user.current_sign_in_ip %>)</li>
          <li class="list-group-item"><strong>Last signed in</strong> <%= @user.last_sign_in_at %> (<%= @user.last_sign_in_ip %>)</li>
        </ul>
      </div>
    </div>
  </div>
</div>