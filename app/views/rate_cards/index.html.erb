<header>
  <h1>Rate Cards</h1>
</header>
<ul class="actions">
  <li><%= link_to "Rate Card", new_rate_card_path,
    class: "new" %></li>
</ul>

<div id="ratecards">
  <table class="table table-striped table-hover">
	 <thead>
	    <tr>
	      <th>Provider</th>
	      <th>Product</th>
	      <th>Value</th>
	      <th></th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @rate_cards.each do |rc| %>
	      <tr>
	  	    <td><%= rc.provider %></td>
	  	    <td><%= rc.key %></td>
	  	    <td>$<%= rc.value %></td>
	  	    <td><%= link_to "", [:edit, rc], class: 'edit' %></td>
	      </tr>
	  	<% end %>
	  </tbody>
	</table>
</div>