<!DOCTYPE html>
<html>
  <head>
	  <meta name="viewport" content="width=device-width, initial-scale=1">
		<title>
		  <% if content_for?(:title) %>
		    <%= yield(:title) %>
		  <% else %>
		    Cloud Portal
		  <% end %>
		</title>
		<%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
	  <nav class="navbar navbar-default navbar-fixed-top" role="navigation">
		  <div class="container">
		    <div class="navbar-header">
		      <%= link_to "Cloud Portal", main_app.root_path, class: "navbar-brand" %>
		      <button type="button" class="navbar-toggle collapsed"
		        data-toggle="collapse" data-target="#collapse">
		        <span class="sr-only">Toggle navigation</span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		        <span class="icon-bar"></span>
		      </button>
		    </div>

		    <div class="collapse navbar-collapse" id="collapse">
		      <ul class="nav navbar-nav">
		        <li class="<%= "active" if current_page?("/") %>">
		          <%= link_to "Home", main_app.root_path %>
		        </li>
		        <li class="<%= "active" if current_page?("/products") %>">
		          <%= link_to "Products", main_app.products_path %>
		        </li>
		        <li class="<%= "active" if current_page?("/rate_cards")%>">
		        	<%= link_to "Rate Card", main_app.rate_cards_path %>
		        </li>
		        <% unless user_signed_in? %>
						  <li class="<%= "active" if current_page?("/users/sign_up") %>">
						    <%= link_to "Sign up", main_app.new_user_registration_path %>
						  </li>
						  <li class="<%= "active" if current_page?("/users/sign_in") %>">
						    <%= link_to "Sign in", main_app.new_user_session_path %>
						  </li>
						<% end %>
		      </ul>
		      <% if user_signed_in? %>
					  <div class="navbar-right">
					    <p class="navbar-text">
					      Signed in as <%= current_user.email %>
					    </p>
					    <ul class="nav navbar-nav">
					      <li><%= link_to "Sign out", main_app.destroy_user_session_path,
					        method: :delete %>
					      </li>
					    </ul>
					  </div>
					<% end %>
		    </div>
		  </div>
		</nav>
  	<div class="container">
		  <% flash.each do |key, message| %>
			  <div class="alert alert-<%= key %>">
			    <%= message %>
			  </div>
			<% end %>
	    <%= yield %>
    </div>
  </body>
</html>
