<header>
  <h1>Projects</h1>
</header>
<ul class="actions">
  <% if policy(Project).new? %>
    <li><%= link_to "Create Project", new_project_path,
    class: "new" %></li>
  <% end %>
</ul>

<div id="project">
  <% if @projects.each do |project| %>
    <h2><%= link_to project.name, project %></h2>
  <% end.empty? %>
    <p>No Projects.</p>
  <% end %>
</div>