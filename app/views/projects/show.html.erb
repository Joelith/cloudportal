<div id="product">
 <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home",root_path %></li>
    <li class="breadcrumb-item active"><%= @project.name%></li>
  </ol>
  <header>
    <h1><%= @project.name %></h1>
    <ul class="actions">
      <% if policy(@project).edit? %>
  	    <li><%= link_to "Edit Project", [:edit, @project],
	      class: "edit" %></li>
      <% end %>
      <% if policy(@project).destroy? %>
        <li><%= link_to "Delete Project", @project, method: :delete,
data: { confirm: "Are you sure you want to delete this project?"},
class: "delete" %></li>
      <% end %>
	  </ul>
  </header>

  Budget: $<%= @project.budget %>
  <h3>Environments</h3>
  <ul class="actions">
    <% if policy(Environment).new? %>
      <li><%= link_to "Request Environment", new_project_environment_path(@project), class: 'btn btn-default' %>
    </li>
    <% end %>
  </ul>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
        <th>Name</th>
        <th>Estimated Cost</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @project.environments.each do |env| %>
        <tr>
          <td><%= link_to env.name, [@project, env] %></td>
          <td><%= number_to_currency(env.total_cost) %></td>
          <td>
          <%= link_to "", [@project, env], method: :delete,
data: { confirm: "Are you sure you want to delete this environment? This will de-provision all associated instances"},
class: "delete" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>