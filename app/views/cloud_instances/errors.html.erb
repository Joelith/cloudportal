<table class="table table-striped table-hover">
<thead>
    <tr>
      <th>Instance</th>
      <th>Date</th>
      <th>Product</th>
      <th>Status</th>
      <th>Error</th>
      <th>&nbsp;</th>
    </tr>
  </thead>
  <tbody>
    <% @instances.each do |environment, instances| %>
      <tr>
        <td colspan="5"><%= link_to environment.project.name, environment.project %>:<%= link_to environment.name, [environment.project, environment] %></td>
        <td><%= link_to "Reprovision", [:reprovision, environment], method: :put, class: 'btn btn-warning', data: { confirm: "Are you sure you want to reprovision this environment? Any failed instances will be reprovisioned in order"} %>
      </tr>
      <% instances.each do | instance | %>
        <tr>
          <td><%= instance.name %></td>
          <td><%= instance.created_at %></td>
          <td><%= instance.environment.product.name %></td>
          <td><%= instance.status %></td>
          <td><%= instance.error_description %></td>
          <td><%= link_to "", [:edit, instance], class: "edit" %></td> 
        </tr>
      <% end %>
    <% end %>
  </tbody>
  <table>