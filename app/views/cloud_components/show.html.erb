<div id="component">
  <ol class="breadcrumb">
    <li class="breadcrumb-item"><%= link_to "Home",root_path %></li>
    <li class="breadcrumb-item"><%= link_to "Products", products_path %></li>
    <li class="breadcrumb-item"><%= link_to @product.name, @product %></li>
    <li class="breadcrumb-item active"><%= @component.pretty_type %></li>
  </ol>
  <div class="card">
    <div class="card-block">
      <div class="row">
        <div class="col-xs-5">
          <h2 class="card-title"><%= @component.pretty_type %></h2>
        </div>
        <div class="col-xs-7">
          <div class="btn-toolbar pull-right" role="toolbar">
            <div class="btn-group" aria-label="First group">
              <% if policy(@component).edit? %>
                <%= link_to "Edit", [:edit, @product, @component],
                class: "edit" %>
              <% end %>
              <% if policy(@component).destroy? %>
                <%= link_to "Delete", [@product, @component], method: :delete,
        data: { confirm: "Are you sure you want to delete this component?"},
        class: "delete" %>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <ul class="list-group">
          <li class="list-group-item"><strong>Est. Monthly Cost</strong> <%= number_to_currency(@component.calculate_monthly_cost) %></li>
          <% @component.config.each do |key, value| %>
            <li class="list-group-item"><strong>
              <%= key %>
            </strong>
              <%= value %>
            </li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>