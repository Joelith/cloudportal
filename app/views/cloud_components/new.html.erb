<ol class="breadcrumb">
  <li class="breadcrumb-item"><%= link_to "Home",root_path %></li>
  <li class="breadcrumb-item"><%= link_to "Products", products_path %></li>
  <li class="breadcrumb-item"><%= link_to @product.name, @product %></li>
  <li class="breadcrumb-item active">New Component</li>
</ol>
<div class="card">
	<div class="card-header">
    <i class="fa fa-edit"></i>New <%= @component.pretty_type %> Component
    <div class="card-actions">
		  <%= link_to @product do %>
      	<i class="fa fa-close"></i>
      <% end %>
    </div>
  </div>   	
  <div class="card-block">
		<%= render "form", product: @product, component: @component %>
	</div>
</div>